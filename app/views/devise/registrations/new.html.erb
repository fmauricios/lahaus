<div class="container">
  <div class="row">
    <div class="form-box">
      <img src="https://s3-us-west-2.amazonaws.com/mauricioserna/static/lah.png"/>
      <%= form_for(resource, as: resource_name, html: { id: "contact-form" }, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Name</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></i></div>
            <%= f.text_field :email, class: "form-control", id: "form-name-field", placeholder: "Name" %>
          </div>
        </div>

        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Budget</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></i></div>
            <%= f.number_field :budget, class: "form-control", id: "form-name-field", placeholder: "Budget" %>
          </div>
        </div>

        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Email</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
            <%= f.email_field :email, class: "form-control", id: "form-name-field", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Password</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div>
            <%= f.password_field :password, class: "form-control", id: "form-name-field", placeholder: "Password" %>
          </div>
        </div>

        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Password Confirmation</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></div>
            <%= f.password_field :password_confirmation, class: "form-control", id: "form-name-field", placeholder: "Password Confirmation" %>
          </div>
        </div>

        <%= f.submit "SignUp", class: "btn btn-lg btn-block btn-send" %>
      <% end %>
    </div>
  </div>
</div>
