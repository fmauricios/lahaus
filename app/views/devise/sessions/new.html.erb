
<div class="container">
  <div class="row">
    <div class="form-box">
      <img src="https://s3-us-west-2.amazonaws.com/mauricioserna/static/lah.png"/>
      <%= form_for(resource, as: resource_name, html: { id: "contact-form" }, url: session_path(resource_name)) do |f| %>
      
        <div class="form-group">
          <div id="nameError" class="sr-only" role="alert"></div>
          <label for="form-name-field" class="sr-only">Email</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
            <%= f.email_field :email, class: "form-control", id: "form-name-field", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group">
          <div id="emailError" class="sr-only" role="alert"></div>
          <label for="form-budget-field" class="sr-only">Password</label>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div>
            <%= f.password_field :password, class: "form-control", id: "form-budget-field", placeholder: "Password" %>
          </div>
        </div>
        <%= f.submit "Login", class: "btn btn-lg btn-block btn-send" %>
      <% end %>
    </div>
  </div>
</div>
