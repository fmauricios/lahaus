<!DOCTYPE html>
<html>
  <head>
    <title>Lahaus</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Signout", destroy_user_session_url, method: :delete %>
      <%= link_to "Simulate credit", new_simulation_url %>
    <% else %>
      <%= link_to "Signin", new_user_session_url %>
      <%= link_to "Signup", new_user_registration_url %>
    <% end %>
    <%= yield %>
  </body>
</html>
